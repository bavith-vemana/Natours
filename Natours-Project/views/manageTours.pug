extends base
block header
  header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png', alt='Natours logo')
block content
    main.main
        .card-container
            each tour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-tertirary
                            span #{tour.name}
                    .card__details
                        a.btn.btn--green.btn--small(href=`/update-tour/${tour._id}`) Update
                        input(type="hidden", name="tourId", value=tour._id)
                        button.btn.btn--green.btn--small.delete-tour Delete
    script(src='/js/deleteTour.js')