extends base

block header
  header.header
    nav.nav.nav--tours
      a.nav__el(href='/') All tours
    .header__logo
      img(src='/img/logo-white.png', alt='Natours logo')
  script(src='/js/createReview.js')
  
block content
  main.main(style='position: relative;')
    .form--create-review
      h2.heading-secondary.ma-bt-lg Submit Your Review
      form.form
        // Review Text Box (max 50 words)
        .form__group
          input(type='hidden', name='tour', id='tourId', value=tourId)
          label.form__label(for='review') Your Review (max 50 words)
          textarea#review.form__input(
            rows='4',
            placeholder='Write your review here...',
            maxlength='300',
            required
          )

        // Star Rating Slider
        .form__group
          label.form__label(for='rating') Rating (1 to 5 ⭐)
          input#rating.form__range(
            type='range',
            min='1',
            max='5',
            step='1',
            value='5',
            required
          )
          .rating-value Selected Rating: 
            span#ratingValue 5 ⭐

        // Submit Button
        .form__group.text-center
          button.btn.btn--green.btn--bold(type='submit') Submit Your Review!
